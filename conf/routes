# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index()
POST    /login                      controllers.AuthController.login(request: Request)
POST    /register                   controllers.AuthController.register(request: Request)
POST    /addStaff                   controllers.StaffController.addStaff(request: Request)
GET     /getStaffById               controllers.StaffController.getStaffById(request: Request, id:String)
GET     /getAllStaff                controllers.StaffController.getAllStaff(request: Request)
PUT     /updateStaff                controllers.StaffController.updateStaff(request: Request, id:String)
DELETE  /deleteStaff                controllers.StaffController.deleteStaff(request: Request,id:String)
POST    /uploadFile                 controllers.StaffController.uploadFile(request: Request,id:String)
POST    /uploadImage                controllers.StaffController.uploadImage(request: Request,id:String)
GET     /taxCalculation             controllers.StaffController.taxCalculation(request: Request,id:String)

POST     /leaveRequest             controllers.LeaveController.leaveRequest(request: Request)
GET       /getAllLeaveRequest      controllers.LeaveController.getAllLeaveRequest(request: Request)
GET       /getLeaveRequestById     controllers.LeaveController.getLeaveRequestById(request: Request, id:String)
PUT       /updateLeaveRequest      controllers.LeaveController.updateLeaveRequest(request: Request, id:String)
DELETE    /deleteLeaveRequest      controllers.LeaveController.deleteLeaveRequest(request: Request, id:String)
PUT       /confirmLeaveRequest     controllers.LeaveController.confirmLeaveRequest(request: Request)





# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
